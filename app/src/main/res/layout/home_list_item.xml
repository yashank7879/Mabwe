<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_3sdp"
    android:layout_marginRight="@dimen/_3sdp">

    <android.support.v7.widget.CardView
        android:id="@+id/home_card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_215sdp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_5sdp"
        android:background="@color/white"
        android:elevation="@dimen/_3sdp"
        card_view:cardCornerRadius="@dimen/_5sdp"
        card_view:cardElevation="@dimen/_3sdp">

        <ImageView
            android:id="@+id/home_image_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/myplaceholder" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/home_child_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_120sdp"
        android:elevation="@dimen/_3sdp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="@dimen/_6sdp"
        card_view:cardElevation="@dimen/_3sdp">

        <TextView
            android:id="@+id/home_category_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="1"

            android:fontFamily="@font/muli_regular"
            android:gravity="right"
            android:padding="@dimen/_5sdp"
            android:text="@string/about_us"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- <TextView
                     android:id="@+id/home_category_name_tv"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="@dimen/_8sdp"
                     android:layout_marginTop="@dimen/_5sdp"
                     android:layout_weight="1"
                     android:paddingLeft="@dimen/_4sdp"
                     android:fontFamily="@font/muli_regular"
                     android:gravity="start"
                     android:textColor="@color/colorPrimary"
                     android:textSize="@dimen/medium_text" />-->


                <TextView
                    android:id="@+id/home_day_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/muli_regular"
                    android:gravity="start"
                    android:paddingEnd="@dimen/_3sdp"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/small_text" />

            </LinearLayout>


            <TextView
                android:id="@+id/we_are_hiring_for_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/muli_regular"
                android:gravity="start"
                android:maxLines="1"
                android:paddingStart="@dimen/_3sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/medium_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:gravity="start"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/location_ic"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="start"
                    android:src="@drawable/map_marker" />


                <TextView
                    android:id="@+id/home_address_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:fontFamily="@font/muli_regular"
                    android:gravity="start"
                    android:maxLines="1"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/small_text" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:gravity="end"
                android:orientation="horizontal"
                android:weightSum="3"
                >


                <LinearLayout
                    android:id="@+id/like_view"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                   >

                    <ImageView
                        android:id="@+id/like_iv"
                        android:layout_width="@dimen/_21sdp"
                        android:layout_height="@dimen/_21sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/inactive_like_ico" />

                    <TextView
                        android:id="@+id/tv_like_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:fontFamily="@font/muli_regular"
                        android:gravity="start"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium_text" />

                    <TextView
                        android:id="@+id/txt_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/muli_regular"
                        android:gravity="end"
                        android:text="Likes"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/_11sdp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/share_layout"
                    android:layout_width="0dp"
                    android:layout_weight=".8"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:visibility="visible"
                    >

                    <ImageView
                        android:id="@+id/iv_share"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/ic_share"
                        android:visibility="visible"
                        android:backgroundTint="@color/colorPrimary"
                        />

                    <TextView
                        android:id="@+id/txt_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/muli_regular"
                        android:gravity="start"
                        android:text="Share"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/_11sdp"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/comment_view"
                    android:layout_width="0dp"
                    android:layout_weight="1.22"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginEnd="@dimen/_8sdp">

                    <ImageView
                        android:layout_width="@dimen/_21sdp"
                        android:layout_height="@dimen/_21sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/comment" />


                    <TextView
                        android:id="@+id/tv_comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:fontFamily="@font/muli_regular"
                        android:gravity="start"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium_text" />

                    <TextView
                        android:id="@+id/txt_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/muli_regular"
                        android:gravity="start"
                        android:text="Comments"
                        android:singleLine="true"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/_11sdp" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
